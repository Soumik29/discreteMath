<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chapter8"
    android:background="#3D3B40">

    <TableLayout
        android:id="@+id/tableLayout8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TableRow
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/chap81_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Relations"
                android:layout_column="0"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/chap82_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Equivalence Relations"
                android:layout_column="1"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/chap83_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Equivalence Relations/Partitions"
                android:layout_weight="1"
                android:layout_column="0"/>

            <Button
                android:id="@+id/chap84_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Relation Representations"
                android:layout_weight="1"
                android:layout_column="1"/>
        </TableRow>
    </TableLayout>

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></com.github.barteksc.pdfviewer.PDFView>


</androidx.constraintlayout.widget.ConstraintLayout>